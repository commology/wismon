CentreMarker_size = 30px
RGYlight_mini_size = 26px
RGYlight_main_size = 60px


.title
  width		auto
  margin        0px
  padding       0px
  text-align    center
  font		36px arial,sans-serif
  overflow      hidden

.subtitle
  width		auto
  margin        0px
  padding       0px
  text-align    center
  font		24px arial,sans-serif
  overflow      hidden

.centre_tile
  width		375px

.map_marker
  margin	-14px -14px
  text-align	center
  font-size	18px
  text-shadow	0 0 2px #000
  display	inline-block
  width		CentreMarker_size
  height	CentreMarker_size
  line-height	CentreMarker_size
  border-radius	50%
  box-shadow	1px 1px 2px #000
  color		#EEE
  background	inherit

.RGYlight_mini
  margin	2px
  text-align	center
  font-size	14px
  text-shadow	0 0 2px #000
  display	inline-block
  width		RGYlight_mini_size
  height	RGYlight_mini_size
  line-height	RGYlight_mini_size
  border-radius	50%
  box-shadow	1px 1px 2px #000
  color		#EEE
  background	inherit

.RGYlight_main
  margin	2px
  text-align	center
  font-size	24px
  display	inline-block
  width		RGYlight_main_size
  height	RGYlight_main_size
  line-height	RGYlight_main_size
  border-radius	50%
  box-shadow	1px 1px 2px
  color		#000

.RGYlight_G
  background	#3F0

.RGYlight_R
  background	#F30

.prop_label
  font-size	12px
  color		black
  text-align	right

.prop_value
  font-size	12px
  color		#08E
  text-align	right

.overall_footer
  font-size	16px
  color		#888
  text-align	right

.status_caption
  font-size	10px
  color		#444
  text-align	center

.contact_info
  font-size	16px
  color		#888
  text-align	left

.btn-close:hover
  cursor	pointer
  cursor	hand

a
  color		#000
a:link
  color		#000
a:hover
  color		#000
a:visited
  color		#000

table.format_grid
  width		100%
  background-color	transparent

header
  width		100%
  position	fixed
  top		0px

footer
  width		100%
  position	fixed
  bottom	0px

